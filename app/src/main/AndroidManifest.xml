<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpfei.graduationproject">
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- TODO 1.4、配置IM SDK需要的权限 -->
    <!-- 监听网络的变化 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" /> <!-- sd卡存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 通知震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /><!--Android9.0-->



    <application

        android:name=".BmobIMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GraduationProject">
        <activity android:name=".message.MessageActivity"></activity>
        <activity android:name=".ui.activities.hr.PostActivity" />
        <activity android:name=".ui.activities.hr.ModifyPracticeActivity" />
        <activity android:name=".ui.activities.hr.ModifyPartActivity" />
        <activity android:name=".ui.activities.hr.ModifyActivity" />
        <activity android:name=".ui.activities.hr.MyPublishActivity" />
        <activity android:name=".ui.activities.hr.HrCheckUserInfoActivity" />
        <activity android:name=".ui.activities.hr.PublishActivity" />
        <activity android:name=".ui.activities.hr.HrMainActivity" />
        <activity android:name=".ui.activities.hr.HrUpdateInfoActivity" />
        <activity android:name=".ui.activities.hr.login.HrLoginAndRegisterActivity" />
        <activity android:name=".ui.activities.common.UpdateUserInfoActivity" />
        <activity android:name=".ui.activities.common.ModifyUserInfoActivity" />
        <activity android:name=".ui.activities.common.ModifyPassWordActivity" />
        <activity android:name=".ui.activities.common.SettingActivity" />
        <activity android:name=".ui.activities.common.AboutActivity" />
        <activity android:name=".ui.activities.common.FeedBackActivity" />
        <activity android:name=".ui.activities.common.MyCollectActivity" />
        <activity android:name=".ui.activities.common.MyAttentionActivity" />
        <activity android:name=".ui.activities.common.SignInActivity" />
        <activity android:name=".ui.activities.common.MyApplyActivity" />
        <activity android:name=".ui.activities.common.EditUserInfoActivity" />
        <activity android:name=".ui.activities.common.MyDataActivity" />
        <activity android:name=".ui.activities.common.HelpActivity" />
        <activity android:name=".ui.activities.common.MyIntegralActivity" />
        <activity android:name=".ui.activities.common.FindsWebDetailsActivity" />
        <activity android:name=".ui.activities.common.MyInfoActivity" />
        <activity android:name=".ui.activities.common.login.LoginAndRegisterActivity" />
        <activity android:name=".ui.activities.common.JobWebDetailsActivity" />
        <activity android:name=".ui.activities.common.SearchActivity" />
        <activity android:name=".ui.activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.common.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.gpfei.graduationproject.BmobContentProvider" /> <!-- TODO 集成：1.3、配置Bmob平台的应用密钥 -->
        <meta-data
            android:name="Bmob_APP_KEY"
            android:value="833216a424abc46085b12199c637bf38" /> <!-- TODO 集成：1.5、配置IM SDK需要的广播和服务 -->
        <receiver android:name="cn.bmob.newim.core.ConnectChangeReceiver">
            <intent-filter>
                <action android:name="cn.bmob.action.RECONNECT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <service
            android:name="cn.bmob.newim.core.service.BmobIMService"
            android:process=":bmobcore" />
        <service
            android:name="cn.bmob.newim.core.service.NotifyService"
            android:process=":bmobcore" />
        <service android:name="cn.bmob.newim.core.service.ReConnectService" />
        <service android:name="cn.bmob.newim.core.service.HeartBeatService" />
        <uses-library android:name="org.apache.http.legacy" android:required="false" />

    </application>

</manifest>